<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
    <li><%= link_to "Edit", edit_article_path(@article) %></li>
    <li><%= link_to "Destroy", article_path(@article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %></li>
</ul>

<h2>Comments:</h2>
<%# "render" will iterate over the comments collection and pass each comment to a local variable named the same as the partial %>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%# .build builds a nested route %>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
<p>
    <%= form.label :commenter %>
    <%= form.text_field :commenter %>
</p>

<p>
    <%= form.label :body %>
    <%= form.text_field :body %>
</p>
<p>
    <%= form.submit %>
</p>
<% end %>
